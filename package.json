{
  "name": "stickytop",
  "version": "1.0.0",
  "description": "A sticky note application with rich editor that stays on top",
  "main": "main.js",
  "scripts": {
    "build-react": "webpack --mode production",
    "build-react-dev": "webpack --mode development",
    "start": "npm run build-react-dev && electron .",
    "dev": "npm run build-react-dev && electron . --dev",
    "dev:watch": "npm run build-react-dev && electron . --dev --watch",
    "build": "npm run build-react && electron-builder",
    "dist": "npm run build-react && electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "sticky-notes",
    "rich-editor",
    "always-on-top"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.stickytop.app",
    "productName": "StickyTop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@tiptap/core": "^3.6.5",
    "@tiptap/extension-list": "^3.6.5",
    "@tiptap/extension-task-item": "^3.6.5",
    "@tiptap/extension-task-list": "^3.6.5",
    "@tiptap/react": "^3.6.5",
    "@tiptap/starter-kit": "^3.6.5",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}
