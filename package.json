{
  "name": "stickytop",
  "version": "1.0.0",
  "description": "A sticky note application with rich editor that stays on top",
  "main": "main.js",
  "scripts": {
    "build-react": "webpack --mode production",
    "build-react-dev": "webpack --mode development",
    "start": "npm run build-react-dev && electron .",
    "start:react": "webpack serve --config webpack.config.js --mode development",
    "start:electron": "wait-on http://localhost:8080 && nodemon --watch main --exec electron .",
    "start:watch": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "dev": "npm run build-react-dev && electron . --dev",
    "dev:watch": "npm run build-react-dev && electron . --dev --watch",
    "build": "npm run build-react && electron-builder"
  },
  "keywords": [
    "electron",
    "sticky-notes",
    "rich-editor",
    "always-on-top"
  ],
  "author": "ThanhTungTruong",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.10",
    "wait-on": "^9.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.stickytop.app",
    "productName": "StickyTop",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "compression": "maximum"
  },
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@tiptap/core": "^3.6.5",
    "@tiptap/extension-list": "^3.6.5",
    "@tiptap/extension-placeholder": "^3.6.5",
    "@tiptap/extension-task-item": "^3.6.5",
    "@tiptap/extension-task-list": "^3.6.5",
    "@tiptap/react": "^3.6.5",
    "@tiptap/starter-kit": "^3.6.5",
    "@tiptap/suggestion": "^3.6.5",
    "babel-loader": "^10.0.0",
    "cors": "^2.8.5",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "googleapis": "^162.0.0",
    "html-webpack-plugin": "^5.6.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0",
    "style-loader": "^4.0.0",
    "tippy.js": "^6.3.7",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}
